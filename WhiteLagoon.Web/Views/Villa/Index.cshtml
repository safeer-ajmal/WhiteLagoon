@model IEnumerable<WhiteLagoon.Domain.Entities.Villa>

	<div class=" card border-0 p-4">
		<div class="card-header  border  p-2 text-center">
	<h3>Villa List</h3>
	</div>
	<div class="card-body  border p-4">
		<div class="text-end pb-3">
			<a asp-controller="Villa" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-house-add "></i>  
			</a>
		</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th class="text-center w-25">Name</th>
					<th class="text-center w-25">Description</th>

					<th class="text-center w-25">Price</th>
					<th class="text-center w-15">Occupancy</th>
					<th class="text-center w-25">SqFt</th>
					<th class="text-center w-25">ImageUrl</th>
					<th class="text-center w-25">VillaCode</th>
					<th class="text-center w-25">Actions</th>

				</tr>

			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr class="text-center">
						<td>@obj.Name</td>
						<td>@obj.Description</td>

						<td>@obj.Price</td>
						<td>@obj.Occupancy</td>
						<td>@obj.Sqft</td>
						<td>@obj.ImageUrl</td>
						<td>@obj.VillaCode</td>

					
					<td class="text-center">
							<div class="w-50 btn-group justify-content-center" role="group">
							<a asp-controller="Villa" asp-action="update" asp-route-Id="@obj.Id" class="mx-2" >
									<i class="bi bi-pencil-square text-secondary"></i>
							</a>
						<a asp-controller="Villa" asp-action="delete" asp-route-Id="@obj.Id" class="mx-2" >
									<i class="bi bi-trash-fill text-secondary"></i>
						</a>
						</div>
					</td>
					</tr>
				}
			</tbody>
		</table>
	</div>


	</div>
